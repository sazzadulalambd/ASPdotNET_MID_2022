    <!--rigth side-->
    <div class="column2">
        <h2>Messege</h2>
        <div class="card shadow mb-4">
            <div class="card-body col-md-5 mb-4">
                <a class="btn btn-info radious" style="width: 150px; margin-bottom: 10px" href="@Url.Action("Messege_add","J_Employee")">Add messege</a>

                <a class="btn btn-outline-success radious" style="width: 150px; margin-bottom: 10px" href="@Url.Action("Messege_sent","J_Employee")">Sent</a>

                <a class="btn btn-outline-primary radious" style="width: 150px; margin-bottom: 10px" href="@Url.Action("Messege_received","J_Employee")">Received</a>


                
                    <form action="" method="post">

                        <div class="form-outline mb-4">
                            @*<label class="form-label" for="form3Example8">To:</label>*@
                            <span class="text-danger">@Html.ValidationMessage("Receiver")</span>
                            <input type="text" name="Receiver" placeholder="To: example@gmail.com" id="form3Example8" class="form-control" />
                        </div>

                        <div class="form-outline mb-4">
                            @*<label class="form-label" for="form3Example8">Subject:</label> *@
                            <span class="text-danger">@Html.ValidationMessage("Subject")</span>
                            <input type="text" name="Subject" placeholder="Subject:" id="form3Example8" class="form-control" />
                        </div>

                        <div class="form-outline mb-4">
                            <span class="text-danger">@Html.ValidationMessage("WMFH")</span>
                            <textarea type="text" name="WMFH" placeholder="Write messege from here..." id="form3Example8" class="form-control"rows="6"></textarea>
                        </div>

                        <input type="Submit" value="Send" class="btn btn-success">

                    </form>
                

            </div>
        </div>
