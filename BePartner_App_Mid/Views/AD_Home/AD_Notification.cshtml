
@{
    Layout = "~/Views/AD_Home/_AD_Layout.cshtml";
}


<div class="d-sm-flex sa_align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Notification</h1>
</div>

<!-- new employees section start -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-sm-flex sa_align-items-center mb-4 justify-content-between ">
        <h6 class="m-0 font-weight-bold text-primary">New Employees (@ViewBag.emss)</h6>

        <form action="/AD_Home/Export_all_new_Employees" method="post">

            <input type="submit" value="Download" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" />

        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>NID</th>
                        <th>Address</th>
                        <th>Security key</th>
                        <th>Gender</th>
                        <th>Account Status</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var IN in Model)
                    {
                        <tr>
                            <td>@IN.Emp_FirstName</td>
                            <td>@IN.Emp_LastName</td>
                            <td>@IN.Emp_Email</td>
                            <td>@IN.Emp_Phone</td>
                            <td>@IN.Emp_Nid</td>
                            <td>@IN.Emp_Address</td>
                            <td>@IN.Emp_Security_key</td>
                            <td>@IN.Emp_Gender</td>
                            <td>
                                <a class="btn btn-success" href="@Url.Action("EmployeesValid","AD_Home",new {id = @IN.Emp_Nid})">Active</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- new employees section End -->
